@page
@model BulkyWeb_Razor_Temp.Pages.Categories.IndexModel
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">

@{ 
	ViewData["Title"] = "Categories";
	
}

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">
				Category List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a class="btn btn-primary" asp-page="categories/new">
				<i class="bi bi-plus-circle"></i> Create New Category
			</a>
		</div>
	</div>
	<table class="table table-bordered table-striped">
		<thead>

			<tr>
				<th>Category Name</th>
				<th>Display Order</th>
			</tr>
		</thead>
		<tbody>
			
			@if (Model.CategoresList == null || !Model.CategoresList.Any())
			{
				<tr>
					<td colspan="2" class="text-center">No categories found.</td>
				</tr>
			}
			else
			{
				foreach (var category in Model.CategoresList)
				{
					<tr>
						<td>@category.Name</td>
						<td>@category.DisplayOrder</td>
						<td>
							<a class="btn btn-secondary" asp-page="categories/edit">
								<i class="bi bi-pencil-square"></i> Edit
							</a>
							<a class="btn btn-danger" asp-page="categories/delete">
								<i class="bi bi-trash"></i> Delete
							</a>
						</td>
					</tr>
				}
			}
	</table>
</div>